# Application
APP_NAME=legal-study
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_PORT=8000
APP_TIMEZONE=UTC

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=stack
LOG_FILE=.logs/app.log
LOG_MAX_FILES=30
LOG_MAX_SIZE=100M

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=legal_study
DB_USERNAME=root
DB_PASSWORD=secret
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DB=0

# Queue
QUEUE_CONNECTION=redis
QUEUE_NAME=default
QUEUE_RETRY_AFTER=90
QUEUE_BLOCK_FOR=null

# Cache
CACHE_DRIVER=redis
CACHE_PREFIX=legal_study
CACHE_TTL=3600

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false
SESSION_COOKIE=legal_study_session

# Mail
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

# Authentication
AUTH_DRIVER=jwt
AUTH_TOKEN_TTL=3600
AUTH_REFRESH_TTL=43200
AUTH_REMEMBER_TTL=604800

# Security
SECURITY_KEY=your-security-key
SECURITY_SALT=your-security-salt
SECURITY_CIPHER=AES-256-CBC

# API
API_DEBUG=true
API_STRICT=false
API_SUBTYPE=legal-study
API_PREFIX=api
API_VERSION=v1
API_NAME="Legal Study API"
API_CONDITIONAL_REQUEST=true
API_STANDARDS_TREE=vnd
API_FORMATS=json

# OpenTelemetry
OTEL_ENABLED=true
OTEL_SERVICE_NAME="${APP_NAME}"
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_HEADERS=""
OTEL_TRACES_SAMPLER=always_on
OTEL_METRICS_ENABLED=true
OTEL_LOGS_ENABLED=true

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_NAMESPACE="${APP_NAME}"
PROMETHEUS_METRICS_ROUTE=/metrics
PROMETHEUS_METRICS_USERNAME=prometheus
PROMETHEUS_METRICS_PASSWORD=secret

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ROUTE=/health
HEALTH_CHECK_CACHE_TTL=60
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_FRESH=true

# Mock Services
MOCK_SERVICES_ENABLED=true
MOCK_API_PORT=8001
MOCK_DB_PORT=8002
MOCK_CACHE_PORT=8003
MOCK_QUEUE_PORT=8004
MOCK_AUTH_PORT=8005
MOCK_METRICS_PORT=8006
MOCK_LOGGING_PORT=8007

# Testing
TEST_DB_DATABASE=legal_study_test
TEST_CACHE_DRIVER=array
TEST_SESSION_DRIVER=array
TEST_QUEUE_DRIVER=sync
TEST_MAIL_DRIVER=array

# Development
DEV_SERVER_HOST=localhost
DEV_SERVER_PORT=3000
DEV_HTTPS=false
DEV_HOT=true
DEV_POLL=false

# Production
PROD_HTTPS=true
PROD_SECURE_COOKIES=true
PROD_FORCE_HTTPS=true
PROD_TRUST_PROXIES=true

# Monitoring
MONITOR_ENABLED=true
MONITOR_DRIVER=prometheus
MONITOR_NAMESPACE="${APP_NAME}"
MONITOR_COLLECT_GARBAGE=true
MONITOR_COLLECT_MEMORY=true
MONITOR_COLLECT_REQUESTS=true
MONITOR_COLLECT_RESPONSES=true
MONITOR_COLLECT_EXCEPTIONS=true
MONITOR_COLLECT_JOBS=true
MONITOR_COLLECT_QUEUES=true
MONITOR_COLLECT_REDIS=true
MONITOR_COLLECT_DB=true
MONITOR_COLLECT_CACHE=true
MONITOR_COLLECT_EVENTS=true
MONITOR_COLLECT_VIEWS=true
MONITOR_COLLECT_AUTH=true
MONITOR_COLLECT_GATES=true
MONITOR_COLLECT_SCHEDULES=true
MONITOR_COLLECT_HTTP=true

# Feature Flags
FEATURE_HEALTH_CHECK=true
FEATURE_METRICS=true
FEATURE_TRACING=true
FEATURE_LOGGING=true
FEATURE_CACHING=true
FEATURE_QUEUEING=true
FEATURE_AUTHENTICATION=true
FEATURE_AUTHORIZATION=true
FEATURE_RATE_LIMITING=true
FEATURE_REQUEST_VALIDATION=true
FEATURE_RESPONSE_CACHING=true
FEATURE_ERROR_TRACKING=true
FEATURE_PERFORMANCE_MONITORING=true 